    {
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Next.js: debug full stack",
                "type": "node-terminal",
                "request": "launch",
                "command": "next dev",
                "console": "integratedTerminal",
                "serverReadyAction": {
                    "pattern": "started server on .+, url: (https?://.+)",
                    "action": "debugWithChrome", // or "debugWithEdge" if using Edge
                    "uriFormat": "%s",
                    "webRoot": "${workspaceFolder}"
                }
            }
        ]
    }